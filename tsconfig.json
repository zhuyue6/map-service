{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@web-map-service/*": ["./packages/*/src"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "type.d.ts"
  ]
}